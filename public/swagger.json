		"schemas": {
			"AuthReturnedInterface": {
				"properties": {
					"token": {
						"type": "string"
					},
					"error": {
						"type": "string"
					}
				},
				"type": "object",
				"additionalProperties": false
			},
			"CreateUserInterface": {
				"properties": {
					"userName": {
						"type": "string"
					},
					"fullName": {
						"type": "string",
						"example": "fullName is optional"
					},
					"email": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"confirmPassword": {
						"type": "string"
					}
				},
				"required": [
					"userName",
					"email",
					"password",
					"confirmPassword"
				],
				"type": "object",
				"additionalProperties": false
			},
			"LoginUserInterface": {
				"properties": {
					"userNameOrEmail": {
						"type": "string",
						"example": "This could be either the userName or the email"
					},
					"password": {
						"type": "string"
					}
				},
				"required": [
					"userNameOrEmail",
					"password"
				],
				"type": "object",
				"additionalProperties": false
			},
			"TodoStatusType": {
				"enum": [
					"in-progress",
					"completed"
				],
				"type": "string"
			},
			"Todo": {
				"properties": {
					"id": {
						"type": "number",
						"format": "double"
					},
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"status": {
						"$ref": "#/components/schemas/TodoStatusType"
					},
					"owner": {
						"$ref": "#/components/schemas/User"
					},
					"dueDate": {
						"type": "string",
						"format": "date-time"
					},
					"createdAt": {
						"type": "string",
						"format": "date-time"
					},
					"updatedAt": {
						"type": "string",
						"format": "date-time"
					},
					"deletedAt": {
						"type": "string",
						"format": "date-time"
					}
				},
				"required": [
					"id",
					"name",
					"owner",
					"createdAt",
					"updatedAt"
				],
				"type": "object",
				"additionalProperties": false
			},
			"User": {
				"properties": {
					"id": {
						"type": "number",
						"format": "double"
					},
					"userName": {
						"type": "string"
					},
					"fullName": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"todos": {
						"items": {
							"$ref": "#/components/schemas/Todo"
						},
						"type": "array"
					},
					"createdAt": {
						"type": "string",
						"format": "date-time"
					},
					"updatedAt": {
						"type": "string",
						"format": "date-time"
					}
				},
				"required": [
					"id",
					"userName",
					"email",
					"password",
					"todos",
					"createdAt",
					"updatedAt"
				],
				"type": "object",
				"additionalProperties": false
			},
			"AddTodoInterface": {
				"properties": {
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string",
						"example": "description is optional"
					},
					"dueDate": {
						"type": "string",
						"example": "dueDate is optional, but if added, it must have a YYYY-MM-DD format"
					}
				},
				"required": [
					"name"
				],
				"type": "object",
				"additionalProperties": false
			},
			"PayloadInterface": {
				"properties": {
					"id": {
						"type": "number",
						"format": "double"
					},
					"userName": {
						"type": "string"
					},
					"fullName": {
						"type": "string"
					},
					"email": {
						"type": "string"
					}
				},
				"required": [
					"id",
					"userName",
					"email"
				],
				"type": "object",
				"additionalProperties": false
			},
			"UpdateTodoInterface": {
				"properties": {
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"status": {
						"$ref": "#/components/schemas/TodoStatusType"
					},
					"dueDate": {
						"type": "string",
						"example": "it must have a YYYY-MM-DD format"
					}
				},
				"required": [
					"status"
				],
				"type": "object",
				"additionalProperties": false
			}
		},
		"securitySchemes": {
			"jwt": {
				"type": "jwt",
				"name": "access_token",
				"in": "query"
			}
		}
